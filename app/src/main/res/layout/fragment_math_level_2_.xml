<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".register.Math_levelFragment"
    android:background="@drawable/math_level_bg">

    <Button
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical|center_horizontal"
        style="@style/ButtonYellow"
        android:backgroundTint="#E65C3F"
        android:text="Start"
        android:textSize="25sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/normalUI"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="331dp"
            android:layout_height="101dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            android:padding="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cloud_bg"
                android:scaleType="center"
                android:layout_margin="0dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="34dp"
                android:minWidth="301dp"
                android:layout_gravity="center_vertical|clip_horizontal"
                android:layout_marginStart="15dp"
                android:background="@drawable/score_bar_bg">

                <TextView
                    android:id="@+id/scoreTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/irish_grover"
                    android:layout_gravity="left|center_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/scoreTextView"/>

                <TextView
                    android:id="@+id/scoreTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/irish_grover"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/scoreTitle"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level"
                    style= "@style/CustomRatingBar"
                    android:numStars="5"
                    android:stepSize="0.01"
                    android:isIndicator="true"
                    android:scaleY="0.8"
                    android:scaleX="0.8"
                    android:rating="4"
                    android:layout_gravity="center_horizontal|center_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="55dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Left: "
                android:textSize="20sp"
                android:fontFamily="@font/irish_grover"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/circular_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    tools:progress="0"/>

                <TextView
                    android:id="@+id/timeLeftTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:textColor="#F2CF32"
                    android:textSize="15sp"
                    style="@style/TextBorderColor"
                    android:layout_gravity="center_horizontal|center_vertical"/>
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find the correct product"
            android:textSize="22sp"
            android:textColor="#000000"
            android:fontFamily="@font/itim_regular"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <!--<androidx.constraintlayout.widget.ConstraintLayout
