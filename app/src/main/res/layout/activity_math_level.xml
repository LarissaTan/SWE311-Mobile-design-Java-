<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MathLevel">

    <TextView
        android:id="@+id/math_level_tv1"
        style="@style/fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:textSize="30sp"
        android:text="What's your math level?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/math_level_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/abeezee_regular"
        android:text="I know the answer of"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/math_level_tv1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="52dp"
        android:src="@drawable/bullets2"
        app:layout_constraintBottom_toTopOf="@id/math_level_tv1"
        app:layout_constraintEnd_toEndOf="parent" />

    <ToggleButton
        android:id="@+id/math_level_tbtn1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:textColor="@drawable/level_txt_selector"
        android:textOff="1 + 2 = ?"
        android:textOn="3"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/math_level_tv2" />

    <ToggleButton
        android:id="@+id/math_level_tbtn2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:layout_marginStart="180dp"
        android:layout_marginTop="120dp"
        android:textColor="@drawable/level_txt_selector"
        android:textOff="4 - 2 = ?"
        android:textOn="2"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/math_level_tv2" />

    <ToggleButton
        android:id="@+id/math_level_tbtn3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:layout_marginStart="28dp"
        android:layout_marginTop="192dp"
        android:textColor="@drawable/level_txt_selector"
        android:textOff="10 + 15 = ?"
        android:textOn="25"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/math_level_tv2" />

    <ToggleButton
        android:id="@+id/math_level_tbtn4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:layout_marginStart="192dp"
        android:layout_marginTop="276dp"
        android:textColor="@drawable/level_txt_selector"
        android:textOff="20 - 18 = ?"
        android:textOn="2"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/math_level_tv2" />

    <Button
        android:id="@+id/math_level_btn_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>