<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#F9FAFC"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="20dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/item_chatbox_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/test_profile_icon" />

        <TextView
            android:id="@+id/item_chatbox_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/item_chatbox_image"
            android:fontFamily="@font/poppins_medium"
            android:text="name"
            android:theme="@style/recycle_item_chatbox_title" />

        <TextView
            android:id="@+id/item_chatbox_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_chatbox_image"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/item_chatbox_title"
            android:text="this is message" />

        <TextView
            android:id="@+id/item_chatbox_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#C9CACE"
            android:text="10:20 AM"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/item_chatbox_alert_bg"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/message_alert"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/item_chatbox_time"/>

        <TextView
            android:id="@+id/item_chatbox_alert_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            android:text="1"
            android:layout_marginEnd="7dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/item_chatbox_time"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>