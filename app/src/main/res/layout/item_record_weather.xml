<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    
        <androidx.cardview.widget.CardView
            android:id="@+id/record_weather_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:cardCornerRadius="40.5dp"
            app:cardBackgroundColor="#FFFFFF"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/record_weather_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="60dp"
                android:maxHeight="60dp"
                android:src="@drawable/record_weather_sun"
                android:layout_gravity="center_vertical|center_horizontal"/>

            <ImageView
                android:id="@+id/record_weather_onclick"
                android:visibility="invisible"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_onclick"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"/>
        </androidx.cardview.widget.CardView>


</FrameLayout>