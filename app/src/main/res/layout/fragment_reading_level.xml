<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".register.Math_levelFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="331dp"
            android:layout_height="101dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            android:padding="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cloud_bg"
                android:scaleType="center"
                android:layout_margin="0dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="34dp"
                android:maxWidth="301dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:background="@drawable/score_bar_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/irish_grover"
                    android:layout_gravity="left|center_vertical" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/level"
                    style= "@style/CustomRatingBar"
                    android:numStars="4"
                    android:stepSize="0.01"
                    android:isIndicator="true"
                    android:scaleY="0.8"
                    android:scaleX="0.8"
                    android:rating="4"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/irish_grover"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginStart="100dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="55dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Left: "
                android:textSize="20sp"
                android:fontFamily="@font/irish_grover"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/circular_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    tools:progress="40"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"
                    android:textColor="#F2CF32"
                    android:textSize="15sp"
                    style="@style/TextBorderColor"
                    android:layout_gravity="center_horizontal|center_vertical"/>
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find the correct product"
            android:textSize="22sp"
            android:textColor="#000000"
            android:fontFamily="@font/itim_regular"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/bee_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bee"
                android:textColor="#000000"
                android:textSize="40sp"
                android:letterSpacing="0.2"
                android:fontFamily="@font/itim_regular"
                android:layout_marginTop="30dp"
                android:layout_alignEnd="@+id/read_level_1"
                android:layout_marginEnd="50dp"
                android:translationZ="10dp"/>


            <ImageButton
                android:id="@+id/sound_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sound_button"
                android:scaleType="center"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:id="@+id/read_level_1"
                android:layout_width="214dp"
                android:layout_height="135dp"
                android:src="@drawable/read_level_1"
                android:scaleType="fitCenter"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/read_level_2"
                android:layout_width="92dp"
                android:layout_height="80dp"
                android:src="@drawable/read_level_2"
                android:scaleType="fitCenter"
                android:layout_below="@+id/read_level_1"
                android:layout_marginTop="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="70dp"/>

            <ImageView
                android:id="@+id/read_level_3"
                android:layout_width="99dp"
                android:layout_height="90dp"
                android:src="@drawable/read_level_3"
                android:scaleType="fitCenter"
                android:layout_below="@+id/read_level_1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="70dp"/>

            <ImageView
                android:id="@+id/read_level_4"
                android:layout_width="102dp"
                android:layout_height="106dp"
                android:src="@drawable/read_level_4"
                android:scaleType="fitCenter"
                android:layout_below="@+id/read_level_2"
                android:layout_marginTop="50dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="110dp"/>


        </RelativeLayout>

    </LinearLayout>



</FrameLayout>