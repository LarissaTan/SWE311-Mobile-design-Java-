<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="20dp">

    <FrameLayout
        android:id="@+id/reading_module1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="24dp"
            app:cardBackgroundColor="#E6F8F8FA"
            app:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/readmath_course_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="Free"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/item_course_video_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="302.78dp"
            android:maxHeight="210dp"
            android:scaleType="fitCenter"
            android:src="@drawable/reading1_image"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>

        <androidx.cardview.widget.CardView
            android:layout_width="332dp"
            android:layout_height="86dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="150dp"
            app:cardBackgroundColor="#E6F8F8FA"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView
                    android:id="@+id/item_course_video_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Learn the basic words (1)"
                    android:textSize="20sp"
                    android:textColor="#252529"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:textSize="15sp"
                        android:textColor="#252529"/>

                    <RatingBar
                        android:id="@+id/item_course_video_ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style= "@style/CustomRatingBar"
                        android:numStars="3"
                        android:stepSize="0.01"
                        android:isIndicator="true"
                        android:scaleY="0.8"
                        android:scaleX="0.8"
                        android:rating="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/level_timer"
                        android:maxWidth="12dp"
                        android:maxHeight="12dp"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="130dp"
                        android:layout_gravity="center_vertical|right"/>

                    <TextView
                        android:id="@+id/item_course_video_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8MIN"
                        android:textSize="13sp"
                        android:textColor="#252529"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center_vertical|right"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</FrameLayout>