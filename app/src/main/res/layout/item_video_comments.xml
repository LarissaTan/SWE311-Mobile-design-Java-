<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/video_comment_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:src="@drawable/video_comment_picture1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/video_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eugene Rodriquez"
            android:textSize="17sp"
            android:textColor="#000000"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/video_comment_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:textSize="13sp"
            android:textColor="#ACB1C0"/>

        <TextView
            android:id="@+id/video_comment_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="This video is easy for my child to learn. She understand a lot. And it motivates her to continue learning."
            android:textSize="17sp"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E4E4E4"
            android:layout_marginTop="15dp"/>

    </LinearLayout>
</LinearLayout>