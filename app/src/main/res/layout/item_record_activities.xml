<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/record_activities_card"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        app:cardBackgroundColor= "#EDF1FA"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/record_activities_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/record_activities_party"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/record_activities_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Party"
                android:textSize="14dp"
                android:textColor="#899A96"
                android:layout_marginEnd="30dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>