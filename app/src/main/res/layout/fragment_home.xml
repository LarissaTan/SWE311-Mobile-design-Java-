<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".navigation.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/app_title"
        android:textSize="30sp"
        android:textColor="#000000"
        android:fontFamily="@font/yujiboku_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Study time"
            android:textColor="#22242A"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"/>

    <!--柱状图绘制的地方-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="#00000000"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:id="@+id/column"
            android:background="#00000000"
            android:layout_width="300dp"
            android:layout_marginStart="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/home_reading"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/home_reading"/>

        <ImageView
            android:id="@+id/home_math"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:src="@drawable/home_math"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/home_exer"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:src="@drawable/home_exer"/>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
             android:background="@drawable/bg_dialog">

            <TextView
                android:id="@+id/home_today_journal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Today`s  journal"
                android:layout_marginStart="10dp"
                android:textColor="#22242A"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="10sp"
                android:text="Oct, 16, 2022"
                android:layout_marginEnd="12dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/home_joural_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activities"
                android:textColor="#8D92A3"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_below="@+id/home_today_journal"/>

            <TextView
                android:id="@+id/home_journal_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_today_journal"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:text="30 Min"
                android:layout_marginEnd="12dp"
                android:textColor="#8D92A3"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_today_journal"
                android:layout_alignEnd="@id/home_journal_time"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Learining"
                android:textColor="#8D92A3"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/home_journal_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/home_journal_time"
                android:layout_marginTop="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:indeterminateTint="#9158AA"
                android:progress="30"/>

            <ImageView
                android:id="@+id/home_activity_icon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/record_activities_party"
                android:layout_alignTop="@id/home_joural_activity"
                android:layout_marginTop="22dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/home_activities_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_activity_icon"
                android:layout_alignTop="@id/home_joural_activity"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/poppins_black"
                android:text="Party"
                android:textColor="#899A96"
                android:textSize="14dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/home_card_weather"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="40.5dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_alignTop="@id/home_activity_icon">

                <ImageView
                    android:id="@+id/home_weather_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="60dp"
                    android:maxHeight="60dp"
                    android:src="@drawable/record_weather_sun"
                    android:layout_gravity="center_vertical|center_horizontal"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="40dp"
                app:cardCornerRadius="40.5dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_alignTop="@id/home_activity_icon"
                android:layout_alignStart="@id/home_card_weather">

                <ImageView
                    android:id="@+id/home_mood_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="24dp"
                    android:maxHeight="24dp"
                    android:src="@drawable/record_mood_happy"
                    android:layout_gravity="center_vertical|center_horizontal"/>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/home_add_journal"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/home_add_icon"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/home_math_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Math Target"
                android:layout_marginStart="10dp"
                android:textColor="#22242A"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/home_more_icon"
                android:layout_alignParentEnd="true"/>

            <!--progress bar implementation-->
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/home_math_progressBar"
                app:cpb_progressbar_color="@color/colorAccent"
                app:cpb_background_progressbar_color="@color/home_circle_grey"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_alignTop="@id/home_math_target"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/home_math_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="26sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_alignBottom="@+id/home_math_progressBar"
                android:layout_alignEnd="@+id/home_math_progressBar"
                android:layout_alignTop="@id/home_math_progressBar"
                android:layout_alignStart="@id/home_math_progressBar"
                />

            <TextView
                android:id="@+id/home_math_title"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Learn the addition within ten"
                android:textSize="16sp"
                android:textColor="#252529"
                android:fontFamily="@font/abeezee"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:layout_alignTop="@id/home_math_target"
                android:layout_marginTop="50dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/home_english_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="English Target"
                android:layout_marginStart="10dp"
                android:textColor="#22242A"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/home_more_icon"
                android:layout_alignParentEnd="true"/>

            <!--progress bar implementation-->
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/home_english_progressBar"
                app:cpb_progressbar_color="@color/home_circle_green"
                app:cpb_background_progressbar_color="@color/home_circle_grey"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_alignTop="@id/home_english_target"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/home_english_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="76"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="26sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_alignBottom="@+id/home_english_progressBar"
                android:layout_alignEnd="@+id/home_english_progressBar"
                android:layout_alignTop="@id/home_english_progressBar"
                android:layout_alignStart="@id/home_english_progressBar"
                />

            <TextView
                android:id="@+id/home_english_title"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Learn the basic words"
                android:textSize="16sp"
                android:textColor="#252529"
                android:fontFamily="@font/abeezee"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:layout_alignTop="@id/home_english_target"
                android:layout_marginTop="50dp"/>
        </RelativeLayout>


        </LinearLayout>

            <Button
                android:id="@+id/just_for_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="just for test"/>

            <Button
                android:id="@+id/test_ong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:text="just test for ong"/>
            <Button
                android:id="@+id/test_cheh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center"
                android:text="just test for cheh"/>

</LinearLayout>
    </ScrollView>
</FrameLayout>