<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/app_title"
        android:textSize="30sp"
        android:textColor="#000000"
        android:fontFamily="@font/yujiboku_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Study time"
            android:textColor="#22242A"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"/>

    <!--柱状图绘制的地方-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="#00000000"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:id="@+id/column"
            android:background="#00000000"
            android:layout_width="300dp"
            android:layout_marginStart="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/home_reading"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/home_reading"/>

        <ImageView
            android:id="@+id/home_math"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:src="@drawable/home_math"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/home_exer"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:src="@drawable/home_exer"/>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
             android:background="@drawable/bg_dialog">

            <TextView
                android:id="@+id/home_today_journal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Today`s  journal"
                android:layout_marginStart="10dp"
                android:textColor="#22242A"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="10sp"
                android:text="Oct, 16, 2022"
                android:layout_marginEnd="12dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/home_joural_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activities"
                android:textColor="#8D92A3"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_below="@+id/home_today_journal"/>

            <TextView
                android:id="@+id/home_journal_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_today_journal"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:text="30 Min"
                android:layout_marginEnd="12dp"
                android:textColor="#8D92A3"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_today_journal"
                android:layout_alignEnd="@id/home_journal_time"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Learining"
                android:textColor="#8D92A3"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/home_journal_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/home_journal_time"
                android:layout_marginTop="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:indeterminateTint="#9158AA"
                android:progress="30"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="R.drawable.record_activities_party"/>

        </RelativeLayout>


        </LinearLayout>

            <Button
                android:id="@+id/just_for_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="just for test"/>

            <Button
                android:id="@+id/test_ong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:text="just test for ong"/>
            <Button
                android:id="@+id/test_cheh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center"
                android:text="just test for cheh"/>

</LinearLayout>
    </ScrollView>
</FrameLayout>