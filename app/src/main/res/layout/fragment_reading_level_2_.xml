<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.Reading_level_2_Fragment"
    android:background="@drawable/reading_level_2_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="331dp"
                android:layout_height="101dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp"
                android:padding="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/cloud_bg"
                    android:scaleType="center"
                    android:layout_margin="0dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="34dp"
                    android:maxWidth="301dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/score_bar_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score"
                        android:textSize="24sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/irish_grover"
                        android:layout_gravity="left|center_vertical" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/level"
                        style= "@style/CustomRatingBar"
                        android:numStars="4"
                        android:stepSize="0.01"
                        android:isIndicator="true"
                        android:scaleY="0.8"
                        android:scaleX="0.8"
                        android:rating="4"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="52"
                        android:textSize="24sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/irish_grover"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginStart="100dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="55dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Left: "
                    android:textSize="20sp"
                    android:fontFamily="@font/irish_grover"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/circular_progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        tools:progress="40"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21"
                        android:textColor="#F2CF32"
                        android:textSize="15sp"
                        style="@style/TextBorderColor"
                        android:layout_gravity="center_horizontal|center_vertical"/>
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find the correct product"
                android:textSize="22sp"
                android:textColor="#000000"
                android:fontFamily="@font/itim_regular"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/reading_level_2_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="100dp"
                    android:fontFamily="@font/mulish_extrabold"
                    android:letterSpacing="0"
                    android:text="Teacher"
                    android:textColor="#F9D150"
                    android:textSize="40sp"/>

                <TextView
                    android:id="@+id/reading_level_2_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/reading_level_2_text_1"
                    android:fontFamily="@font/mulish_extrabold"
                    android:letterSpacing="0"
                    android:text="Taecher"
                    android:textColor="#F9D150"
                    android:textSize="40sp"/>

                <TextView
                    android:id="@+id/reading_level_2_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/reading_level_2_text_2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="100dp"
                    android:fontFamily="@font/mulish_extrabold"
                    android:letterSpacing="0"
                    android:text="Taecher"
                    android:textColor="#F9D150"
                    android:textSize="40sp" />

            </RelativeLayout>

        </LinearLayout>


</FrameLayout>