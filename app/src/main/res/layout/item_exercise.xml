<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/cartoon_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/item_exercise_image"
            android:layout_width="108dp"
            android:layout_height="68dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/exercise_1" />

        <TextView
            android:id="@+id/item_exercise_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/item_exercise_image"
            android:fontFamily="@font/alegreya_bold"
            android:textColor="#1E1F20"
            android:text="name" />

        <TextView
            android:id="@+id/item_exercise_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_exercise_image"
            android:fontFamily="@font/alegreya"
            android:layout_marginStart="10dp"
            android:textColor="#8F92A1"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/item_exercise_title"
            android:text="Level" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cartoon_level"
            style= "@style/CustomRatingBar"
            android:numStars="3"
            android:stepSize="0.01"
            android:isIndicator="true"
            android:scaleY="0.8"
            android:scaleX="0.8"
            android:rating="1"
            android:layout_alignTop="@+id/item_exercise_message"
            android:layout_alignStart="@+id/item_exercise_message"
            android:layout_marginStart="35dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>