<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".temp_head.CartoonsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true">

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view_cartoon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/cartoon_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How To Make Pancakes!"
            android:fontFamily="@font/abeezee_regular"
            android:textSize="24sp"
            android:textColor="#1E1F20"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/cartoon_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya"
                android:text="36MIN"
                android:textColor="#1E1F20"
                android:textSize="16sp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:id="@+id/cartoon_time_icon"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_time"
                android:layout_marginEnd="50dp"
                android:layout_alignEnd="@id/cartoon_duration"/>

            <RatingBar
                android:id="@+id/cartoon_level_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style= "@style/CustomRatingBar"
                android:numStars="3"
                android:stepSize="0.01"
                android:isIndicator="true"
                android:scaleY="0.8"
                android:scaleX="0.8"
                android:rating="2"
                android:layout_marginEnd="30dp"
                android:layout_alignEnd="@+id/cartoon_time_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level"
                android:fontFamily="@font/alegreya"
                android:layout_marginEnd="68dp"
                android:layout_alignEnd="@+id/cartoon_level_detail"
                android:textSize="16sp"
                android:textColor="#1E1F20"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:fontFamily="@font/abeezee_regular"
            android:textSize="22sp"
            android:textColor="#1E1F20"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="280dp"
                    android:src="@drawable/icon_line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summary"
                        android:fontFamily="@font/abeezee_regular"
                        android:textSize="15sp"
                        android:textColor="#1E1F20"/>
                    <TextView
                        android:id="@+id/cartoon_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abeezee_regular"
                        android:textSize="13sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Jumping to a position with the legs spread wide and the hands going overhead, sometimes in a clap,"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Key point 1"
                        android:fontFamily="@font/abeezee_regular"
                        android:textSize="15sp"
                        android:textColor="#1E1F20"/>
                    <TextView
                        android:id="@+id/cartoon_key1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abeezee_regular"
                        android:textSize="13sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Jumping to a position with the legs spread wide and the hands going overhead, sometimes in a clap,"/>

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Key point 2"
                            android:fontFamily="@font/abeezee_regular"
                            android:textSize="15sp"
                            android:textColor="#1E1F20"/>
                        <TextView
                            android:id="@+id/cartoon_key2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/abeezee_regular"
                            android:textSize="13sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Jumping to a position with the legs spread wide and the hands going overhead, sometimes in a clap,"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</FrameLayout>